{
    "compilerOptions": {
      "target": "es6",
      "lib": [ "esnext" ],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "strict": true, 
      "module": "esnext",
      "moduleResolution": "node",
      "isolatedModules": true,
      "noEmit": false,
      "outDir": "./dist"
    },
    "include": [
      "./src"
, "./test"    ],
    "exclude": [
        "./node_modules"
    ]
}